// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["public", "auth"]
}

model Profile {
  id        String   @id @db.Uuid
  email     String   @unique
  fullName  String?  @map("full_name")
  role      Role
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  teachingClasses Class[]         @relation("TeacherClasses")
  teachingCourses Course[]        @relation("TeacherCourses")
  attendance      Attendance[]
  courseEnrollments CourseEnrollment[]
  classEnrollments  ClassEnrollment[]

  @@map("profiles")
  @@schema("public")
}

model Course {
  id          String   @id @default(cuid())
  name        String
  description String?
  semester    String?
  subject     String?
  joinCode    String   @unique @map("join_code")
  teacherId   String   @map("teacher_id") @db.Uuid
  teacherName String?  @map("teacher_name")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  teacher     Profile          @relation("TeacherCourses", fields: [teacherId], references: [id], onDelete: Cascade)
  classes     CourseClass[]
  enrollments CourseEnrollment[]

  @@map("courses")
  @@schema("public")
}

model Class {
  id        String   @id @default(cuid())
  name      String
  joinCode  String   @unique @map("join_code")
  teacherId String   @map("teacher_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  teacher       Profile          @relation("TeacherClasses", fields: [teacherId], references: [id], onDelete: Cascade)
  attendance    Attendance[]
  attendanceCodes AttendanceCode[]
  courses       CourseClass[]
  enrollments   ClassEnrollment[]

  @@map("classes")
  @@schema("public")
}

model CourseClass {
  id       String @id @default(cuid())
  courseId String @map("course_id")
  classId  String @map("class_id")

  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  class    Class  @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([courseId, classId])
  @@map("course_classes")
  @@schema("public")
}

model CourseEnrollment {
  id        String   @id @default(cuid())
  studentId String   @map("student_id") @db.Uuid
  courseId  String   @map("course_id")
  enrolledAt DateTime @default(now()) @map("enrolled_at")

  student   Profile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, courseId])
  @@map("course_enrollments")
  @@schema("public")
}

model ClassEnrollment {
  id        String   @id @default(cuid())
  studentId String   @map("student_id") @db.Uuid
  classId   String   @map("class_id")
  enrolledAt DateTime @default(now()) @map("enrolled_at")

  student   Profile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  class     Class   @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([studentId, classId])
  @@map("class_enrollments")
  @@schema("public")
}

model Attendance {
  id        String   @id @default(cuid())
  classId   String   @map("class_id")
  studentId String   @map("student_id") @db.Uuid
  date      DateTime @db.Date
  status    AttendanceStatus
  latitude  Float?
  longitude Float?
  locationAddress String? @map("location_address")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  student Profile @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([classId, studentId, date])
  @@map("attendance")
  @@schema("public")
}

model AttendanceCode {
  id         String   @id @default(cuid())
  classId    String   @map("class_id")
  code       String   @unique
  expiryTime DateTime @map("expiry_time")
  teacherLatitude  Float? @map("teacher_latitude")
  teacherLongitude Float? @map("teacher_longitude")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@map("attendance_codes")
  @@schema("public")
}

enum Role {
  student
  teacher
  @@schema("public")
}

enum AttendanceStatus {
  present
  absent
  @@schema("public")
}
